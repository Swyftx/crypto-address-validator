  "version": "1.0.0",
  "author": "Swyftx",
  "contributors": [
    {
      "name": "Tomek Kolasa",
      "email": "tomek@kolasa.me"
    }
  ],
  "homepage": "https://github.com/Swyftx/crypto-address-validator",
